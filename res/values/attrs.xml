<?xml version="1.0" encoding="utf-8"?>
<resources>
  <declare-styleable name="PlotView">
    <attr name="primaryColor" format="color" />
    <attr name="secondaryColor" format="color" />
    <attr name="borderColor" format="color" />
    <attr name="mainTicsColor" format="color" />
    <attr name="subTicsColor" format="color" />
    <attr name="mainTicsStep">
      <enum name="hour" value="0" />
      <enum name="day" value="1" />
      <enum name="week" value="2" />
      <enum name="month" value="3" />
    </attr>
    <attr name="subTicsStep">
      <enum name="hour" value="0" />
      <enum name="day" value="1" />
      <enum name="week" value="2" />
      <enum name="month" value="3" />
    </attr>
    <attr name="mainValueTicsStep" format="integer" />
    <attr name="subValueTicsStep" format="integer" />
  </declare-styleable>
</resources>
